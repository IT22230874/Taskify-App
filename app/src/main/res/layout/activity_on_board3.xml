<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back2"
    app:circularflow_radiusInDP="10dp"
    tools:context=".onBoard3">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="274dp"
        android:layout_height="222dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="424dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onboard" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="273dp"
        android:layout_height="58dp"
        android:layout_marginStart="182dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="171dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Task Management and To-Do List"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="261dp"
        android:layout_height="65dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/lexend_deca"
        android:text="This productive tool is designed to help you better manage your task project-wise conveniently"
        android:textAlignment="center"
        android:textColor="@color/onboardtxt2"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="281dp"
        android:layout_height="56dp"
        android:layout_marginStart="174dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#4C7AEF"
        android:text="@string/onboard3txt3"
        android:textColor="@color/back"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>